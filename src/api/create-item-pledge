export default async function createItemPledge({
  pledge,
  quantity,
  mode = "donation",
  comment = "",
}) {
  const url = `${import.meta.env.VITE_API_URL}item-pledges/`;

  const res = await fetch(url, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      pledge,
      quantity,
      mode,
      comment,
    }),
  });

  if (!res.ok) {
    const data = await res.json().catch(() => ({}));
    throw new Error(data?.detail ?? "Error creating item pledge");
  }

  return await res.json();
}
